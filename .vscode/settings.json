{
  // Angular and TypeScript settings
  "typescript.preferences.noSemicolons": "off",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.quoteStyle": "single",
  
  // Editor settings for Angular development
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  
  // Angular Language Service
  "angular.enable-strict-mode-prompt": false,
  
  // Files to exclude from explorer
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.angular": true,
    "**/coverage": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/.vscode/chrome-debug-user-data": true,
    "**/.vscode/edge-debug-user-data": true
  },
  
  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.angular": true,
    "**/coverage": true,
    "**/playwright-report": true,
    "**/test-results": true
  },
  
  // Auto save
  "files.autoSave": "onFocusChange",
  
  // Emmet settings for Angular
  "emmet.includeLanguages": {
    "typescript": "html"
  },
  
  // HTML settings
  "html.format.wrapAttributes": "preserve-aligned",
  
  // CSS settings
  "css.validate": true,
  "scss.validate": true,
  
  // Debug settings
  "debug.onTaskErrors": "prompt",
  "debug.openDebug": "openOnDebugBreak",
  
  // Terminal settings
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  
  // Git settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  
  // Playwright settings
  "playwright.reuseBrowser": true,
  "playwright.showTrace": true
}