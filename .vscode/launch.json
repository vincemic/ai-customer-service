{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome (Frontend)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "Frontend: Start Dev Server",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-user-data",
      "runtimeArgs": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ]
    },
    {
      "name": "Launch Edge (Frontend)",
      "type": "msedge",
      "request": "launch",
      "preLaunchTask": "Frontend: Start Dev Server",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true,
      "userDataDir": "${workspaceFolder}/.vscode/edge-debug-user-data",
      "runtimeArgs": [
        "--disable-web-security"
      ]
    },
    {
      "name": "Launch Chrome (Test Server)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "Frontend: Start Test Server",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-test-user-data",
      "runtimeArgs": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ]
    },
    {
      "name": "Launch Edge (Test Server)",
      "type": "msedge",
      "request": "launch",
      "preLaunchTask": "Frontend: Start Test Server",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true,
      "userDataDir": "${workspaceFolder}/.vscode/edge-test-user-data",
      "runtimeArgs": [
        "--disable-web-security"
      ]
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Debug Playwright Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "--debug"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "PWDEBUG": "1"
      },
      "preLaunchTask": "Frontend: Start Dev Server"
    },
    {
      "name": "Run Playwright Tests (Headed)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "--headed", "--reporter=list"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "Frontend: Start Dev Server"
    }
  ]
}
