{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "label": "Frontend: Start Dev Server",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": ".*Local:\\s+(https?://\\S+)"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "build",
      "label": "Frontend: Build Production",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "shell",
      "label": "Frontend: Start Test Server",
      "command": "ng",
      "args": ["serve", "--configuration=test"],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": ".*Local:\\s+(https?://\\S+)"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "e2e",
      "label": "Test: Run E2E Tests",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "Frontend: Start Dev Server"
    },
    {
      "type": "npm",
      "script": "e2e:ui",
      "label": "Test: Run E2E Tests (UI Mode)",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "Frontend: Start Dev Server"
    },
    {
      "type": "shell",
      "label": "Kill ng serve",
      "command": "taskkill",
      "args": ["/F", "/IM", "node.exe", "/T"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "windows": {
        "command": "taskkill",
        "args": ["/F", "/IM", "node.exe", "/T"]
      },
      "linux": {
        "command": "pkill",
        "args": ["-f", "ng serve"]
      },
      "osx": {
        "command": "pkill",
        "args": ["-f", "ng serve"]
      }
    }
  ]
}
